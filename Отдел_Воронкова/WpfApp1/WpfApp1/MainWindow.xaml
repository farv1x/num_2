<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Главная страница" Height="450" Width="800">
    <Grid Background="#F8F9FA" >
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="63*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions >
            <RowDefinition Height="53*"/>
            <RowDefinition Height="381*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dgemployee" Background="#FFFFFF" BorderBrush="#E0E0E0" Grid.Row="1" Grid.Column="1" Margin="20" AutoGenerateColumns="True"></DataGrid>
        <StackPanel  Background="#ECF0F1 "  Grid.Row="1">
            <Button x:Name="add" Margin="10" Width="90" Height="30" Background="#3498DB" Content="Добавить" Foreground="#2C3E50" BorderThickness="0"/>
            <Button x:Name="del" Margin="10" Width="90" Height="30" Background="#3498DB" Content="Уволить" Foreground="#2C3E50" BorderThickness="0"/>
            <Button x:Name="upd" Margin="10" Width="90" Height="30" Background="#3498DB" Content="Изменить" Foreground="#2C3E50" BorderThickness="0"/>
        </StackPanel>
        <Border Background="#2C3E50" Height="70" Padding="15" Grid.ColumnSpan="2">
            <Grid>
                <TextBlock x:Name="User" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="White" Text=""/>
                <Button x:Name="Logout" VerticalAlignment="Top" HorizontalAlignment="Right" Content="Выход" Background="#E74C3C" Foreground="White" Padding="15,5" BorderThickness="0" Click="Logout_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
