<Window x:Class="WpfApp1.auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Авторизация" Height="490" Width="850">
    <Grid Background="#F8F9FA" >
        <Grid.RowDefinitions>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="500*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Margin="250,51,450,300" Height="30" Width="100" Content="Логин:" Foreground="#2C3E50" FontSize="14"/>
        <Label Grid.Row="1" Margin="250,156,450,195" Height="30" Width="100" Content="Пароль:" Foreground="#2C3E50" FontSize="14"/>
        <TextBox x:Name="log" Grid.Row="1" Margin="250,86,250,255" Width="300" Height="40"/>
        <PasswordBox x:Name="pass" Grid.Row="1" Margin="250,191,250,150" Width="300" Height="40"/>
        <Button Grid.Row="1" x:Name="Login" Margin="355,272,355,69" Width="90" Height="40" Background="#3498DB" FontSize="15" Content="Войти" Foreground="#2C3E50" BorderThickness="0" Click="Login_Click"/>
        <Border Background="#2C3E50" Height="58" Padding="15" Grid.ColumnSpan="2">
            <Grid>
                <TextBlock x:Name="Auth" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="White" Text="Авторизация"/>
                <Button x:Name="Logout" VerticalAlignment="Top" HorizontalAlignment="Right" Content="Выход" Background="#E74C3C" Foreground="White" Padding="15,5" BorderThickness="0" Click="Logout_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
